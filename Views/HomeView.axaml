<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AuthGatun.ViewModels"
             mc:Ignorable="d" 
                d:DesignWidth="800"
                d:DesignHeight="450"
                x:DataType="vm:HomeViewModel"
             x:Class="AuthGatun.Views.HomeView">
    
    <Design.DataContext>
        <vm:HomeViewModel/>
    </Design.DataContext>
    
    <StackPanel x:Name="LayoutUp">
        <ItemsControl Height="550" ItemsSource='{Binding ServiceKeys}'>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Classes="keys"
                            Content='{Binding ServiceName}'
                            HorizontalAlignment='Center'
                            CommandParameter="{Binding SecretKey}"
                            Command="{Binding $parent[ItemsControl].((vm:HomeViewModel)DataContext).CopyToClipboardCodeCommand}"
                            />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
